<!-- 统计卡片 -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2 stats-card">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            总消息数
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {{formatNumber data.stats.messages.total}}
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2 stats-card">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            活跃任务
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {{formatNumber data.stats.tasks.active}}
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tasks fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2 stats-card">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            活跃Bot
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {{formatNumber data.stats.bots.active}}
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-robot fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2 stats-card">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            CRM集成
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            {{formatNumber data.stats.integrations.active}}
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-plug fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 图表和最近活动 -->
<div class="row">
    <!-- 消息趋势图表 -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">消息处理趋势</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in">
                        <div class="dropdown-header">操作:</div>
                        <a class="dropdown-item" href="/analytics">详细分析</a>
                        <a class="dropdown-item" href="/export">导出数据</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="messagesChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- 系统状态 -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">系统状态</h6>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>消息处理服务</strong>
                    </div>
                    <div class="col-sm-6">
                        <span class="badge {{statusBadge data.status.messageProcessor.status}}" 
                              data-status="messageProcessor">
                            {{#if data.status.messageProcessor.healthy}}正常{{else}}异常{{/if}}
                        </span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>AI分类服务</strong>
                    </div>
                    <div class="col-sm-6">
                        <span class="badge {{statusBadge data.status.aiService.status}}" 
                              data-status="aiService">
                            {{#if data.status.aiService.healthy}}正常{{else}}异常{{/if}}
                        </span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>任务服务</strong>
                    </div>
                    <div class="col-sm-6">
                        <span class="badge {{statusBadge data.status.taskService.status}}" 
                              data-status="taskService">
                            {{#if data.status.taskService.healthy}}正常{{else}}异常{{/if}}
                        </span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>Bot管理服务</strong>
                    </div>
                    <div class="col-sm-6">
                        <span class="badge {{statusBadge data.status.botManager.status}}" 
                              data-status="botManager">
                            {{#if data.status.botManager.healthy}}正常{{else}}异常{{/if}}
                        </span>
                    </div>
                </div>
                
                <div class="text-center mt-3">
                    <button class="btn btn-primary btn-sm" onclick="refreshStatus()">
                        <i class="fas fa-sync-alt me-1"></i>刷新状态
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 最近活动 -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">最新消息</h6>
            </div>
            <div class="card-body">
                {{#if data.recentMessages}}
                    {{#each data.recentMessages}}
                    <div class="d-flex align-items-center border-bottom py-2">
                        <div class="flex-shrink-0">
                            <i class="fas fa-comment-dots fa-lg text-{{#if (eq platform 'telegram')}}primary{{else if (eq platform 'discord')}}info{{else}}secondary{{/if}}"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold">{{platform}} - {{substring content 0 50}}{{#if (gt content.length 50)}}...{{/if}}</div>
                            <div class="text-muted small">{{formatDate created_at}}</div>
                        </div>
                        <div class="flex-shrink-0">
                            <span class="badge bg-{{#if (eq status 'completed')}}success{{else if (eq status 'processing')}}warning{{else}}secondary{{/if}}">
                                {{status}}
                            </span>
                        </div>
                    </div>
                    {{/each}}
                {{else}}
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-inbox fa-3x mb-3 text-gray-300"></i>
                        <p>暂无最新消息</p>
                    </div>
                {{/if}}
                
                <div class="text-center mt-3">
                    <a href="/messages" class="btn btn-outline-primary btn-sm">
                        查看所有消息 <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">待处理任务</h6>
            </div>
            <div class="card-body">
                {{#if data.pendingTasks}}
                    {{#each data.pendingTasks}}
                    <div class="d-flex align-items-center border-bottom py-2">
                        <div class="flex-shrink-0">
                            <i class="fas fa-task fa-lg text-{{#if (eq priority 'urgent')}}danger{{else if (eq priority 'high')}}warning{{else}}info{{/if}}"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold">{{title}}</div>
                            <div class="text-muted small">优先级: {{priority}} | {{formatDate created_at}}</div>
                        </div>
                        <div class="flex-shrink-0">
                            <a href="/tasks/{{id}}" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                    {{/each}}
                {{else}}
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-check-circle fa-3x mb-3 text-gray-300"></i>
                        <p>暂无待处理任务</p>
                    </div>
                {{/if}}
                
                <div class="text-center mt-3">
                    <a href="/tasks" class="btn btn-outline-primary btn-sm">
                        查看所有任务 <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// 初始化消息趋势图表
const ctx = document.getElementById('messagesChart').getContext('2d');
const messagesChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: {{{json data.chartData.labels}}},
        datasets: [{
            label: '消息数量',
            data: {{{json data.chartData.data}}},
            borderColor: 'rgb(75, 192, 192)',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            tension: 0.1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            y: {
                beginAtZero: true
            }
        },
        plugins: {
            legend: {
                display: false
            }
        }
    }
});

// 刷新系统状态
function refreshStatus() {
    fetch('/api/dashboard/status')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                updateSystemStatus(data.status);
                showNotification('系统状态已刷新', 'success');
            }
        })
        .catch(error => {
            console.error('Failed to refresh status:', error);
            showNotification('刷新状态失败', 'error');
        });
}

// 实时更新
setInterval(() => {
    refreshStatus();
}, 30000); // 每30秒刷新一次

// 工具函数
function substring(str, start, length) {
    return str ? str.substring(start, start + length) : '';
}
</script> 